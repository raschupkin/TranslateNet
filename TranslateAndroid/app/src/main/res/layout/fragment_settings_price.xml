<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/SP_DescrTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_price_descr"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
	    <TextView
	        android:id="@+id/SP_LanguageLabelTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/lang"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
	        android:id="@+id/SP_LanguageTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="-"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:layout_marginBottom="10dp" >
   	    <TextView
    	    android:id="@+id/SP_PriceLabelTextView"
        	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
    	    android:text="@string/price"
        	android:textAppearance="?android:attr/textAppearanceMedium" />
        <EditText
            android:id="@+id/SP_DollarsEditText"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
    		android:minEms="2"
    		android:singleLine="true"
    		android:text="1"
    		android:inputType="number" />
	    <TextView
    	    android:id="@+id/SP_DollarLabelTextView"
        	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
    	    android:text="$"
        	android:textAppearance="?android:attr/textAppearanceMedium" />
        <EditText
            android:id="@+id/SP_CentsEditText"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
    		android:minEms="2"
    		android:singleLine="true"
    		android:scrollHorizontally="true"
    		android:text="0"
    		android:inputType="number" />
	    <TextView
    	    android:id="@+id/SP_CentLabelTextView"
        	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
    	    android:text="@string/cents"
        	android:textAppearance="?android:attr/textAppearanceMedium" />
	    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >	    
	    <Button
	        android:id="@+id/SP_CancelButton"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_weight=".50"
	        android:text="@string/cancel" />
	    <Button
	        android:id="@+id/SP_DoneButton"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_weight=".50"
	        android:text="@string/done" />
    	</LinearLayout>
</LinearLayout>
